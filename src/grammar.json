{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/grammar.schema.json",
  "name": "hotcrp",
  "rules": {
    "source_file": {
      "type": "SEQ",
      "members": [
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "preamble_line"
          }
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "section"
          }
        }
      ]
    },
    "preamble_line": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "metadata"
        },
        {
          "type": "SYMBOL",
          "name": "comment"
        },
        {
          "type": "SYMBOL",
          "name": "regular_line"
        }
      ]
    },
    "section": {
      "type": "PREC_RIGHT",
      "value": 0,
      "content": {
        "type": "SEQ",
        "members": [
          {
            "type": "FIELD",
            "name": "header",
            "content": {
              "type": "SYMBOL",
              "name": "section_header"
            }
          },
          {
            "type": "REPEAT",
            "content": {
              "type": "CHOICE",
              "members": [
                {
                  "type": "SYMBOL",
                  "name": "metadata"
                },
                {
                  "type": "SYMBOL",
                  "name": "comment"
                },
                {
                  "type": "SYMBOL",
                  "name": "regular_line"
                }
              ]
            }
          }
        ]
      }
    },
    "section_header": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "==*=="
        },
        {
          "type": "FIELD",
          "name": "text",
          "content": {
            "type": "SYMBOL",
            "name": "line_text"
          }
        }
      ]
    },
    "metadata": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "==+=="
        },
        {
          "type": "FIELD",
          "name": "text",
          "content": {
            "type": "SYMBOL",
            "name": "line_text"
          }
        }
      ]
    },
    "comment": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "==-=="
        },
        {
          "type": "FIELD",
          "name": "text",
          "content": {
            "type": "SYMBOL",
            "name": "line_text"
          }
        }
      ]
    },
    "regular_line": {
      "type": "FIELD",
      "name": "text",
      "content": {
        "type": "SYMBOL",
        "name": "line_text_nostart_eq"
      }
    },
    "line_text": {
      "type": "IMMEDIATE_TOKEN",
      "content": {
        "type": "PATTERN",
        "value": "[ \\t]*[^\\n]+"
      }
    },
    "line_text_nostart_eq": {
      "type": "TOKEN",
      "content": {
        "type": "PATTERN",
        "value": "[^=\\n][^\\n]*"
      }
    }
  },
  "extras": [
    {
      "type": "PATTERN",
      "value": "\\r?\\n"
    }
  ],
  "conflicts": [],
  "precedences": [],
  "externals": [],
  "inline": [],
  "supertypes": [],
  "reserved": {}
}